<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/immersive_camera_transition_show"
        motion:constraintSetStart="@+id/immersive_camera_hide"
        motion:constraintSetEnd="@+id/immersive_camera_show"
        motion:duration="@integer/privacy_indicator_animation_duration" />

    <Transition
        android:id="@+id/immersive_camera_transition_hide"
        motion:constraintSetStart="@+id/immersive_camera_show"
        motion:constraintSetEnd="@+id/immersive_camera_hide"
        motion:duration="@integer/privacy_indicator_animation_duration" />

    <ConstraintSet android:id="@+id/immersive_camera_hide">
        <Constraint
            android:id="@+id/immersive_privacy_camera"
            android:contentDescription="@null"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_camera_light"
            android:background="@drawable/privacy_chip_active_background_pill"
            android:visibility="gone"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/immersive_camera_show">
        <Constraint
            android:id="@+id/immersive_privacy_camera"
            android:contentDescription="@null"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_camera_light"
            android:background="@drawable/privacy_chip_active_background_pill"
            android:visibility="visible"/>
    </ConstraintSet>
</MotionScene>